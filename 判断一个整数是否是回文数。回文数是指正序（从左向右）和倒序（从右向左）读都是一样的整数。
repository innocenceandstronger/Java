class Solution {
    public boolean isPalindrome(int x) {
        String temp=String.valueOf(x);
        char[] nums=temp.toCharArray();
        int len=nums.length;
        for(int i=0,j=len-1;i<j;){
            if(nums[i++]==nums[j--]){
                
            }else{
                return false;
            }
        }
        return true;
    }
}
